<h1>All expenses</h1>
<div class="container">
  <div class="row">
    <% @expenses.each do |expense| %>
      <div class="col-md-3 col-lg-3 col-sm-3">
      <div class="thumbnail">
        <%= image_tag "images.jpg" %>
        <div class="caption">
          <h3><%= expense.title %></h3>
          <p><%= expense.description %> for <%= expense.value %></p>
          <p>
          <%= link_to "Open", expense_path(expense.id), class: "btn btn-success" %>
          <%= link_to "Edit", edit_expense_path(expense.id), class: "btn btn-warning" %>
           <a href="#" class="btn btn-primary" role="button">Delete</a></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
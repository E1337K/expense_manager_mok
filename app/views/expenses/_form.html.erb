<%= form_for @expense do |f| %>
  <%= f.label "Title" %>
  <%= f.text_field :title %><br/>
  <%= f.label "Value" %>
  <%= f.text_field :value %><br/>
  <%= f.label "Description" %>
  <%= f.text_area :description %><br/>
  <%= f.label "Image" %>
  <%= f.file_field :image %><br/>
  <%= f.label "Date of expense" %>
  <%= f.text_field :date_exp  %><br/>
  <%= f.label "Category" %>
  <% if !params[:outcome].nil? %>
    <% if params[:outcome] == "false" %>
    <% outcome = false %>
    <% elsif params[:outcome] == "true" %>
    <% outcome = true %>
    <% end %>
    <%= f.collection_select(:category_id, Category.where(outcome: outcome), :id, :name, :prompt => "Select a category") %><br/>
  <% else %>
    <%= f.collection_select(:category_id, Category.all, :id, :name, :prompt => "Select a category") %><br/>
  <% end %>
  <%= f.label "City" %>
  <%= f.collection_select(:city_id, City.all, :id, :name, :prompt => "Select a city") %><br/>
    <%= f.hidden_field :outcome, value: params[:outcome] %>
  <%= f.submit "Save" %>
<% end %>
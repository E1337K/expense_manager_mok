<div class="container">
  <div class="row">
    <div class="col-md-3 col-lg-3 col-sm-3">
      <div class="list-group">
        <% if params[:category].nil? %>
          <%= link_to expenses_path, class: "list-group-item active" do %>All <span class="badge"><%= @expenses.count %></span><% end %>
          <% else %>
            <%= link_to expenses_path, class: "list-group-item" do %>All <span class="badge"><%= @expenses.count %></span><% end %>
          <% end %> 
        <% @categories.each do |category| %>
          <% if current_page? expenses_path(category: category.id) %>
            <%= link_to expenses_path(category: category.id), class: "list-group-item active" do %><%= category.name %> <span class="badge"><%= category.expenses.count %></span><% end %>
            <% else %>
              <%= link_to expenses_path(category: category.id), class: "list-group-item" do %><%= category.name %> <span class="badge"><%= category.expenses.count %></span><% end %>
            <% end %>
        <% end %>
      </div>
    </div>
    <div class="col-md-9 col-lg-9 col-sm-9">
      <% @expenses.each do |expense| %>
        <div class="col-md-3 col-lg-3 col-sm-3">
        <div class="thumbnail">
          <%= image_tag "#{expense.image}" %>
          <div class="caption">
            <h3><%= expense.title %></h3>
            <p><%= expense.description %> for <%= expense.value %></p>
            <p>
            <%= link_to "Open", expense_path(expense.id), class: "btn btn-success" %>
            <%= link_to "Edit", edit_expense_path(expense.id), class: "btn btn-warning" %>
             <a href="#" class="btn btn-primary" role="button">Delete</a></p>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>